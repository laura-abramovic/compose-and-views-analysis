<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  List item card  -->

    <style name="Title" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="ButtonAccept" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:text">@string/button_accept_text</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="icon">@drawable/ic_check</item>
        <item name="iconTint">@color/primary_white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ButtonDecline" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:text">@string/button_decline_text</item>
        <item name="backgroundTint">@color/primary_red</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="icon">@drawable/ic_close</item>
        <item name="iconTint">@color/primary_white</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>
